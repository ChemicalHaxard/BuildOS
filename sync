#!/bin/bash

mkdir -p /tmp/rom # Where to sync source
cd /tmp/rom

SECONDS=0

if [[ $git_cookies != 0 ]]; then

sudo touch /etc/mtab
sudo chmod 777 /etc/mtab

echo "$git_cookies" > ~/git_cookies.sh
bash ~/git_cookies.sh

fi

# Sync source
repo init --depth=1 --no-repo-verify -u https://github.com/crdroidandroid/android -b 11.0 --git-lfs

# Sync source without unnecessary messages, try with -j30 first, if fails, it will try again
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j10 || repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j10

# tree
git clone --depth=1 https://ImSpiDy:$my_og_token@github.com/ImSpiDy/device_xiaomi_lavender device/xiaomi/lavender -b R
git clone --depth=1 https://ImSpiDy:$my_og_token@github.com/ImSpiDy/vendor_xiaomi_lavender vendor/xiaomi/lavender -b R
git clone --depth=1 https://ImSpiDy:$my_og_token@github.com/ImSpiDy/kernel_xiaomi_lavender kernel/xiaomi/lavender -b X7-Qti

# extra stuff
#git clone --depth=1 https://github.com/LineageOS/android_hardware_lineage_livedisplay hardware/lineage/livedisplay -b lineage-17.1
git clone --depth=1 https://gitlab.com/Project-Nexus/nexus-clang.git /tmp/rom/prebuilts/clang/host/linux-x86/nexus-clang -b nexus-14
git clone --depth=1 https://ImSpiDy:$my_og_token@github.com/ImSpiDy/XiaomiParts vendor/XiaomiParts -b R
#git clone --depth=1 https://github.com/Nub-XD/platform_vendor_lawnchair vendor/lawnchair -b 11

# Gapps
git clone --depth=1 https://gitlab.com/MindTheGapps/vendor_gapps vendor/gapps -b rho
git clone --depth=1 https://gitlab.com/xyzuan/xdroid_vendor_google_gms vendor/google/gms -b eleven
git clone --depth=1 https://github.com/xdroid-CAF/xd_vendor_google_pixel vendor/google/pixel -b eleven

# re clone hals
rm -rf /tmp/rom/hardware/qcom-caf/msm8998/display /tmp/rom/hardware/qcom-caf/msm8998/audio /tmp/rom/hardware/qcom-caf/msm8998/media
git clone --depth=1 https://github.com/ArrowOS/android_hardware_qcom_display /tmp/rom/hardware/qcom-caf/msm8998/display -b arrow-11.0-caf-msm8998
git clone --depth=1 https://github.com/ArrowOS/android_hardware_qcom_audio /tmp/rom/hardware/qcom-caf/msm8998/audio -b arrow-11.0-caf-msm8998
git clone --depth=1 https://github.com/ArrowOS/android_hardware_qcom_media /tmp/rom/hardware/qcom-caf/msm8998/media -b arrow-11.0-caf-msm8998

rm -rf /tmp/rom/frameworks/base
git clone --depth=1 https://github.com/Nub-XD/android_frameworks_base /tmp/rom/frameworks/base -b 11.0

# patch
cd /tmp/rom/vendor/lineage && curl https://github.com/Nub-XD/android_vendor/commit/4a5f01ebdf57e5e63f9acb6e8344b750b9d4aab4.patch | git am
cd /tmp/rom/vendor/qcom/opensource/power && curl https://github.com/Nub-XD/android_vendor_qcom_opensource_power/commit/8367d039bb345644be2b3d67d59f366e4ae18681.patch | git am

#bash /tmp/rom/vendor/nusantara/scripts/merge-aosp.sh security-10.0.0_r75

. /tmp/ci/function
tg "$rom_name source sync completed!
Total Size: $(du -sh /tmp/rom | cut -d - -f 1 | cut -d / -f 1)
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

echo "$(($SECONDS / 60))" > /tmp/sync_time.txt
